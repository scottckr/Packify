<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_user_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/map_popup_border"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_new_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:text="@string/new_order_add" />

        <EditText
            android:id="@+id/input_new_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/input_new_order_nr"
            android:inputType="number"
            android:maxLength="9" />

        <EditText
            android:id="@+id/input_new_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nytt kundnamn"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_new_customer_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/input_new_customer_nr"
            android:inputType="number"
            android:maxLength="9" />

        <EditText
            android:id="@+id/input_new_order_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/input_new_order_sum"
            android:inputType="number"
            android:maxLength="9" />

        <EditText
            android:id="@+id/input_new_order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/input_new_order_address"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_new_order_post_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/input_new_postaddress"
            android:inputType="text" />

        <Switch
            android:id="@+id/is_new_order_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10sp"
            android:text="@string/switch_is_delivered" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit_order"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginRight="5sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/button_style"
            android:textColor="@color/colorAccent"
            android:onClick="addNewOrder"
            android:text="@string/btn_add_new_order" />

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:background="@drawable/button_style"
            android:textColor="@color/colorAccent"
            android:onClick="cancelBtn"
            android:text="@string/btn_cancel" />
    </LinearLayout>
</LinearLayout>

