<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.scottcrocker.packify"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ActiveOrdersActivity"
            android:label="@string/active_orders_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OrderHistoryActivity"
            android:label="@string/order_history_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SpecificOrderActivity"
            android:label="@string/specific_order_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OrderHandlerActivity"
            android:label="@string/order_handler_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UserHandlerActivity"
            android:label="@string/user_handler_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:fitsSystemWindows="true"
            android:label="@string/login_label"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".NewUserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
        <activity
            android:name=".SignatureActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".NewOrderActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/Theme.AppCompat.Light.Dialog">
        </activity>
    </application>

</manifest>