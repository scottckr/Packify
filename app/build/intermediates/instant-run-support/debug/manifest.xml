<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scottcrocker.packify"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name="com.scottcrocker.packify.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.scottcrocker.packify.ActiveOrdersActivity"
            android:label="@string/active_orders_label" />
        <activity
            android:name="com.scottcrocker.packify.OrderHistoryActivity"
            android:label="@string/order_history_label" />
        <activity
            android:name="com.scottcrocker.packify.SpecificOrderActivity"
            android:label="@string/specific_order_label" />
        <activity
            android:name="com.scottcrocker.packify.OrderHandlerActivity"
            android:label="@string/order_handler_label" />
        <activity
            android:name="com.scottcrocker.packify.SettingsActivity"
            android:label="@string/settings_label" />
        <activity
            android:name="com.scottcrocker.packify.UserHandlerActivity"
            android:label="@string/user_handler_label" />
        <activity
            android:name="com.scottcrocker.packify.LoginActivity"
            android:fitsSystemWindows="true"
            android:label="@string/login_label"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>