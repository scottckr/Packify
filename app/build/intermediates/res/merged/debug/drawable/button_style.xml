<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#F79D11"
                android:startColor="#F79D11"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFF3E0" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#F57C00"
                android:startColor="#F79D11"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFE0B2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#F57C00"
                android:startColor="#F57C00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFE0B2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>